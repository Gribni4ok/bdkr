    <table class="table-grid-element fixed">
        {{#unless create-check}}
        <tr>
            <th>ID записи</th>
            <td><input disabled readonly id="id" class="table-element appendix-element" value="{{appendix.appendixID}}"></td>
        </tr>
        {{else}}
        <caption>{{studentfio}}</caption>
        {{/unless}}
        <tr>
            <th>Наименование</th>
            <td><textarea {{attribute}} oninput="auto_grow(this)" name="input" id="name" class="table-element table-textarea appendix-element">{{appendix.appendixname}}</textarea></td>
        </tr>
        <tr>
            <th>Описание</th>
            <td>
                <textarea {{attribute}} oninput="auto_grow(this)" name="input" id="description" class="table-element table-textarea appendix-element">{{appendix.appendixdesc}}</textarea>
            </td>
        </tr>
        {{#isGreater token.role "1"}}
        {{#unless create-check}}
        <tr> 
            <td colspan="2"><button onclick="delete_element(this)" id="delete-button" class="table-button" value="{{appendix.appendixID}}">Удалить</button></td>
        </tr>
        {{/unless }}
        {{/isGreater}}
    </table>